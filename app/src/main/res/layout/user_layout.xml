<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="2dp"
    android:layout_margin="4dp"
    android:backgroundTint="?attr/colorSurface"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!-- Imagen de Usuario -->
    <ImageView
        android:id="@+id/img_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_profile_placeholder"
        android:scaleType="centerCrop"
        android:background="@drawable/circular_background"
        android:padding="4dp"
        android:elevation="2dp" />

    <!-- Nombre del Usuario -->
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_user"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:text="Usuario"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary" />

    <!-- Hora del Último Mensaje -->
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/txt_name"
        android:layout_marginEnd="8dp"
        android:text="12:34 PM"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary" />

    <!-- Último Mensaje del Usuario -->
    <TextView
        android:id="@+id/txt_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_user"
        android:layout_below="@id/txt_name"
        android:layout_alignStart="@id/txt_name"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/txt_time"
        android:text="Este es el último mensaje del usuario."
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Línea de Separación -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txt_last_message"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0" />

</RelativeLayout>
